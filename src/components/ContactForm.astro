<form
    name="contact"
    action="/thanks"
    method="POST"
    netlify-honeypot="website-url"
    class="container"
    data-netlify="true"
>
    <label class="sr-only" for="website-url">Your website</label>
    <input class="sr-only" type="text" id="website-url" name="website-url" tabindex="-1" autocomplete="off" />

    <label for="name" class="sr-only">Name</label>
    <input class="base-input" type="text" id="name" name="name" placeholder="Name" />

    <label for="email" class="sr-only">Email</label>
    <input class="base-input" type="email" id="email" name="email" placeholder="Email" />

    <label for="message" class="sr-only">Message</label>
    <textarea class="base-input" id="message" name="message" placeholder="Leave a message" rows="6"></textarea>

    <button type="submit" class="reset-button gradient-button">Send</button>
</form>

<style>
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 2rem;

        width: 100%;
        padding-bottom: 8rem;
    }

    .sr-only {
        position: absolute;
        overflow: hidden;
        clip: rect(0 0 0 0);
        width: 1px;
        height: 1px;
        margin: -1px;
        border: 0;
        padding: 0;
    }

    .base-input {
        width: clamp(200px, 100%, 500px);
        border: 2px var(--dark) solid;
        padding: 8px;

        color: var(--dark);

        /* Reset styles */
        background-image: none;
        background-color: transparent;
        box-shadow: none;
    }

    .reset-button {
        background-color: transparent;
        border-width: 0;
        font-family: inherit;
        font-size: inherit;
        font-style: inherit;
        font-weight: inherit;
        line-height: inherit;
        padding: 0;
    }

    .gradient-button {
        display: grid;
        place-content: center;

        width: 200px;
        aspect-ratio: 3 / 1;

        color: var(--light);
        cursor: pointer;

        background-image: linear-gradient(to left, var(--color1), var(--color2)),
            url('/assets/noise.svg');

        background-blend-mode: multiply;

        border: 10px solid;
        border-image-slice: 1;
        border-width: 2px;
        border-image-source: linear-gradient(to left, var(--color1), var(--color2));

        transition: translate ease 0.4s;
    }

    .gradient-button:focus,
    .gradient-button:hover {
        translate: 0 -2px;
        transition: translate ease 0.2s;
    }
</style>
