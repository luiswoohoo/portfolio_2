---
// Component imports
import Project from './Project.astro'

// Styles import
import '../styles/global.css'

// Data import
import { projectsData } from '../scripts/projectsData'
---

<div>
    {
        projectsData.map((proj, index) => (
            <Project projNum={index} name={proj.name} tech={proj.tech} description={proj.description} src={proj.src} width={proj.width} height={proj.height} alt={proj.alt} />
        ))
    }
</div>

<style>
    div {
        width: 100%;
        min-height: 100dvh;

        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 8rem;

        /* padding: 4rem 0; */

        border: 1px red solid;
    }
</style>
