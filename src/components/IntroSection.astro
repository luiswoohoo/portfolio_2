---
// Component import
import CldImageRound from './CldImageRound.astro'

// Styles import
import '../styles/global.css'
---

<header>
    <div class="container">
        <CldImageRound
            src={'Self_Portrait_01_exqkxi'}
            width={300}
            height={300}
            alt={'profile pic'}
        />
        <div class="text">
            <h1 class="title">Hi! I'm Luis<br />A Web Developer</h1>
        </div>
    </div>
</header>

<style>
    header {
        width: 100%;
        min-height: 100dvh;

        display: flex;
        align-items: center;
        justify-content: center;

        padding: 1rem 0;

        border: 1px red solid;
    }

    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;

        padding: 8rem 0;

        color: var(--main-color);

        border: 1px blue solid;
    }
    .profile {
        width: 50%;
        height: 10rem;
        border: 1px green solid;
    }

    .text {
        min-width: 80%;

        .title {
            font-size: 2.5rem;
            text-align: center;
        }

        border: 1px purple solid;
    }
</style>
