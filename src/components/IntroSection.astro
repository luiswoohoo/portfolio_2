---
// Component import
import CldImageRound from './CldImageRound.astro'
---

<header>
    <div class="container">
        <CldImageRound
            src={'Self_Portrait_01_exqkxi'}
            width={300}
            height={300}
            alt={'profile pic'}
        />

        <h1 class="title">Hi! I'm Luis<br />A Web Developer</h1>
    </div>
</header>

<style>
    header {
        width: 100%;
        min-height: 100vh;

        display: flex;
        align-items: center;
        justify-content: center;

        padding-top: 2rem;
        padding-bottom: 4rem;
    }

    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;

        width: 100%;
    }

    .title {
        font-size: clamp(2.5rem, 5vw, 4rem);
        text-align: center;
        line-height: 1.2;
    }
</style>
