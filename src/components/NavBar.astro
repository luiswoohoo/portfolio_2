---
// Component import
import NavLinks from './NavLinks.astro'
import Hamburger from './Hamburger.astro'
import ThemeToggle from './ThemeToggle.astro'
---

<nav class="navbar">
    <div class="nav-links">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="#projects-section">Projects</a></li>
            <li><a href="#contact-section">Contact</a></li>
        </ul>
    </div>
</nav>

<style>
    nav {
        display: flex;
        justify-content: center;
        align-items: center;

        width: 100%;

        padding: 16px 32px;
    }

    .nav-links {
        width: 100%;

        & ul {
            display: flex;
            justify-content: space-around;

            width: 100%;

            margin: 0;
            padding: 0;
        }

        & li {
            list-style: none;

            & a {
                display: block;

                color: inherit;
                text-decoration: none;
                text-transform: lowercase;

                transition: translate ease 0.4s;

                &:link {
                    color: inherit;
                }

                &:visited {
                    color: inherit;
                }

                &:focus,
                &:hover,
                &:active {
                    color: rebeccapurple;
                }

                &:focus {
                    translate: 0 -2px;
                    transition: translate ease .2s;
                }
            }
        }
    }

    /* This eliminates jitter when mouse cursor sits right on top of bottom border */
    .nav-links li:hover > a {
        translate: 0 -2px;
        transition: translate ease .2s;
    }

    @media screen and (min-width: 768px) {
        .nav-links {
            font-size: 1.25rem;
        }
    }
</style>
