---
import { config } from '../scripts/urls'
const url = config.url
---

<nav class="navbar">
    <div class="nav-links">
        <ul>
            <li><a href="/" class="nav-link">Home</a></li>
            <li><a href=`${url}#projects-section` class="nav-link">Projects</a></li>
            <li><a href=`${url}#contact-section` class="nav-link">Contact</a></li>
        </ul>
    </div>
</nav>

<style>
    nav {
        display: flex;
        justify-content: center;
        align-items: center;

        width: 100%;

        padding: 16px 32px;
    }

    .nav-links {
        width: 100%;
    }

    .nav-links ul {
        display: flex;
        justify-content: space-around;

        width: 100%;

        margin: 0;
        padding: 0;
    }

    .nav-links ul li {
        list-style: none;
    }

    .nav-link {
        display: block;

        padding: 0 0.5rem;

        color: inherit;
        text-decoration: none;
        text-transform: lowercase;

        transition: translate ease 0.4s;
    }

    .nav-link:link,
    .nav-link:visited,
    .nav-link:focus,
    .nav-link:hover,
    .nav-link:active {
        color: inherit;
    }

    .nav-link:focus {
        translate: 0 -2px;
        transition: translate ease 0.2s;
    }

    /* This eliminates jitter when mouse cursor sits right on top of bottom border */
    .nav-links li:hover > a {
        translate: 0 -2px;
        transition: translate ease 0.2s;
    }

    @media screen and (min-width: 768px) {
        .nav-links {
            font-size: 1.25rem;
        }
    }
</style>
